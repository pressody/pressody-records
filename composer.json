{
	"name": "pixelgradelt/pixelgradelt-records",
  	"version": "0.15.0",
	"description": "Define and manage PixelgradeLT parts and packages (plugins and themes) to be used on customers' websites. Also, provide a Composer repository for the defined WordPress plugins and themes.",
	"keywords": [
		"pixelgradelt",
		"pixelgrade",
		"infrastructure",
		"wordpress",
		"composer",
		"satis"
	],
	"type": "wordpress-plugin",
	"homepage": "https://github.com/pixelgradelt/pixelgradelt-records",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
		  "name": "Vlad Olaru",
		  "email": "vlad@pixelgrade.com",
		  "homepage": "https://pixelgrade.com/"
		}
	],
	"support": {
		"issues": "https://github.com/pixelgradelt/pixelgradelt-records/issues",
		"source": "https://github.com/pixelgradelt/pixelgradelt-records"
	},
	"config": {
	  	"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"prefer-stable": true,
	"repositories": {
		"wordpress": {
			"type": "vcs",
			"url": "https://github.com/WordPress/wordpress-develop",
			"no-api": true
		},
		"wp-post-notes": {
		  "type": "path",
		  "url": "../../_temp/wp-post-notes",
		  "options": {
			"symlink": true
		  }
		}
	},
	"require": {
		"php": "^7.4",
		"ext-json": "*",
		"automattic/jetpack-constants": "^1.6",
		"cedaro/wp-plugin": "^0.4.0",
		"chamilo/pclzip": "^2.8",
		"composer/composer": "^2.0",
		"composer/installers": "^1.0",
		"composer/semver": "^3.2",
		"hashids/hashids": "^4.1",
		"htmlburger/carbon-fields": "^3.2",
		"oscarotero/env": "^2.1",
		"pimple/pimple": "^3.2",
		"psr/container": "^1.0",
		"psr/log": "^1.0",
		"vlucas/phpdotenv": "^5.3",
	  	"woocommerce/action-scheduler": "^3.2",
	  	"pixelgrade/wp-post-notes": "@dev"
	},
	"require-dev": {
		"brain/monkey": "^2.2",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"phpcompatibility/phpcompatibility-wp": "^2",
		"phpunit/phpunit": "^7.5",
		"roave/security-advisories": "dev-master",
		"squizlabs/php_codesniffer": "^3.3",
		"wordpress/wordpress": "^5.6",
	    "wp-cli/i18n-command": "dev-master",
		"wp-coding-standards/wpcs": "^1"
	},
	"autoload": {
		"psr-4": {
			"PixelgradeLT\\Records\\": "src/"
		},
		"files": [
			"src/functions.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"PixelgradeLT\\Records\\Tests\\": "tests/phpunit/"
		},
		"files": [

		]
	},
	"extra": {
	  "installer-paths": {
		"vendor/{$vendor}/{$name}/": ["woocommerce/action-scheduler"]
	  }
	},
	"scripts": {
		"install-codestandards": [
			"Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
		],
		"phpcs": "./vendor/bin/phpcs",
		"tests": "./vendor/bin/phpunit --colors=always",
		"tests-unit": "./vendor/bin/phpunit --testsuite=Unit --colors=always",
		"tests-integration": "./vendor/bin/phpunit --testsuite=Integration --colors=always",
	  	"makepot": "./vendor/bin/wp i18n make-pot . languages/pixelgradelt-records.pot",
		"prepare-for-release": [
		  "composer install",
		  "composer makepot",
		  "composer install --no-dev --prefer-dist",
		  "composer dump-autoload --no-dev --optimize"
		]
	}
}
